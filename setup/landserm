#!/bin/bash
# Automatically run landserm CLI as landserm user for security

# During bash completion, run directly (no sudo) to preserve environment
if [[ -n "$_LANDSERM_COMPLETE" ]]; then
    exec /opt/landserm/.venv/bin/landserm "$@"
else
    # Normal execution: run as landserm user
    exec sudo -u landserm /opt/landserm/.venv/bin/landserm "$@"
fi
