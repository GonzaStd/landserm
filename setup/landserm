#!/bin/bash
# Automatically run landserm CLI as landserm user for security
# Preserve completion environment variables
if [[ -n "$_LANDSERM_COMPLETE" ]]; then
    exec sudo -u landserm _LANDSERM_COMPLETE="$_LANDSERM_COMPLETE" COMP_WORDS="$COMP_WORDS" COMP_CWORD="$COMP_CWORD" /opt/landserm/.venv/bin/landserm "$@"
else
    exec sudo -u landserm /opt/landserm/.venv/bin/landserm "$@"
fi
